<workflow-app xmlns="uri:oozie:workflow:0.4" name="reddit_scrapping">
    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
    </global>

    <credentials>
        <credential name="hive-creds" type="hive2">
            <property>
                <name>hive2.server.principal</name>
                <value>${hivePrincipal}</value>
            </property>
            <property>
                <name>hive2.jdbc.url</name>
                <value>${jdbcUrl}</value>
            </property>
        </credential>
    </credentials>


    <start to="scrap_to_file"/>

    <action name="scrap_to_file">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>		
            <exec>touch</exec>
			<argument>/user/pk.stradomski-ece/hello.py</argument>
            <capture-output/>
        </shell>
        <ok to="end"/>
        <error to="kill_job"/>
    </action>

    <kill name="kill_job">
	<message>Python action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

    <end name="end"/>

</workflow-app>